{
    "title": "区块链技术指南",
    "author": "yeasy",
    "language": "zh-hans",
    "plugins": [
        "-autocover",
        "image-captions",
        "latex-codecogs",
        "prism", 
        "prism-themes", 
        "-highlight",
        "theme-vmlite@git+https://github.com/vmlite/gitbook-plugin-theme-vmlite.git"
    ],
    "pluginsConfig": {
        "autocover": {
            "font": {
                "size": null,
                "family": "Impact",
                "color": "#000"
            },
            "size": {
                "w": 1800,
                "h": 2360
            },
            "background": {
                "color": "#FFF"
            }
        },
        "image-captions": {
            "attributes": { "width": "400" },
            "caption": "图 _PAGE_LEVEL_._PAGE_IMAGE_NUMBER_ - _CAPTION_"
        },
        "github-buttons": {
            "repo": "yeasy/blockchain_guide",
            "types": [
                "star",
                "watch"
            ]
        }
    }
}
